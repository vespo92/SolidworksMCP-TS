    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.9.1",
    "prettier": "^3.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4",
    "vitest": "^1.2.1"
  },
  "keywords": [
    "mcp",
    "solidworks",
    "cad",
    "automation",
    "vba"
