{
  "name": "mcp-server-solidworks-ts",
  "version": "1.0.0",
  "description": "MCP server for SolidWorks CAD automation with VBA generation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-solidworks": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
